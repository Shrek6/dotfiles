# i3 mode for power management menu (sleep, etc..)
# requires root login to work -- switch to dbus-send instead of systemctl to change
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
exec --no-startup-id feh --bg-fill '/home/marc/Pictures/Screenshot (9).png'
set $Locker i3lock -i '/home/marc/Pictures/newScreenst9.png' && sleep 1
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl $Locker && hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

